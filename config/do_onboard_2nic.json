{
    "schemaVersion": "1.0.0",
    "class": "Device",
    "async": true,
    "label": "my BIG-IP declaration for declarative onboarding",
    "Common": {
        "class": "Tenant",
        "hostname": "bigip1.example.com",
        "myDns": {
            "class": "DNS",
            "nameServers": [
                "169.254.169.254"
            ]
        },
        "myNtp": {
            "class": "NTP",
            "servers": [
                "0.pool.ntp.org"
            ],
            "timezone": "UTC"
        },
        "dbvars": {
            "class": "DbVariables",
            "provision.extramb": 1000,
            "restjavad.useextramb": true,
            "ui.advisory.enabled": true,
            "config.allow.rfc3927": "enable",
            "dhclient.mgmt": "disable",
            "ui.advisory.color": "green",
            "ui.advisory.text": "/Common/hostname"
        },
        "admin": {
            "class": "User",
            "userType": "regular",
            "password": "{{{ ADMIN_PASS }}}",
            "keys": ["{{{ SSH_KEYS }}}"],
            "shell": "bash"
        },
        "{{{ USER_NAME }}}": {
            "class": "User",
            "userType": "regular",
            "password": "{{{ ADMIN_PASS }}}",
            "keys": ["{{{ SSH_KEYS }}}"],
            "shell": "bash",
            "partitionAccess": {
                "all-partitions": {
                    "role": "admin"
                }
            }
        },
        "defaultManagementRoute": {
            "class": "ManagementRoute",
            "mtu": 1460,
            "network": "default",
            "gw": "{{{MGMT_GW}}}"
        },
        "external": {
            "class": "VLAN",
            "tag": 4094,
            "mtu": 1500,
            "interfaces": [
                {
                    "name": "1.0",
                    "tagged": false
                }
            ]
        },
        "external-self": {
            "class": "SelfIp",
            "address": "{{{SELF_IP_EXTERNAL}}}",
            "vlan": "external",
            "allowService": "none",
            "trafficGroup": "traffic-group-local-only"
        }
    }
}
